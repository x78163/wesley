<div class="row">
  <div class="spacer"></div>
  <div class="col-md-12" style= "    text-align: center; margin-top: 15%; margin-bottom: 5%;">
  <img style=" width: 25%;"class="image-form" src="http://res.cloudinary.com/wesley-united-methodist-kc/image/upload/v1502983181/messenger_iyf161.png" alt="" style="width: 32%;
    margin-bottom: 4%;">
    <!-- we'll configure this to compose new conversations later -->
  </div>


<div class="container" style="margin-left:5%; margin-right: 5%; ">
  <div class="col-md-4" >
    <div class="panel panel-default">
      <div class="panel-body" >
        <%= render 'mailbox/folders' %>
      </div>
    </div>
  </div>

  <div class="col-md-8" >
    <div class="panel panel-default">
      <div class="panel-body" style="margin-bottom: 90%;">
        <% if is_conversation %>
            <%= render 'conversations/form' %>
        <% else %>
        <%= render partial: 'conversations/conversation', collection: messages %>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>
