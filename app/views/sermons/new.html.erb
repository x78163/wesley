
<div class="container-form" style="margin-bottom: 5%;">
<img style=" width: 50%;"class="image-form" src="http://res.cloudinary.com/wesley-united-methodist-kc/image/upload/v1502934314/newsermon_rmy26i.png" alt="" style="">

<%= simple_form_for @sermon do |f| %>
  <div class="form-inputs">


  <%= f.input :title,  input_html: {style: 'font-size:3vh;'}  %>
  <%= f.label :description %>
  <%= f.text_area :description, class: 'form-control',placeholder: "Summarize the sermon here....", rows: 5,  input_html: {style: 'font-size:2vh;'} %>
  <br>
  <%= f.input :speaker ,  input_html: {style: 'font-size:3vh;'}%>
  <%= f.input :speakdate, :label => "Date" %>

  <%= f.input :audio, as: :attachinary, :label => "Browse my computer for the Sermon Audio File" %>




  </div>

  <div class="form-actions" style="padding-bottom:5%;">
    <div style="display: block;
    margin-right: auto;
    margin-left: auto; ">
    <%= f.button :submit, "Submit Completed Form", class: "btn-treehouse", style: "display: block;
    margin-right: auto;
    margin-left: auto; " %>

 </div>
  </div>
<% end %>
</div>
